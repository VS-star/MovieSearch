root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = crlf
trim_trailing_whitespace = false
insert_final_newline = false

[*.{s,}css]
quote_type = single
indent_style = space
indent_size = 2

[*.js{,x}]
quote_type = single
indent_style = space
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
